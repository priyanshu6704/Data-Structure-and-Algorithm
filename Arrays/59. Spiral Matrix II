class Solution {
    public int[][] generateMatrix(int n) {
        int count=1;
        int minr=0;
        int minc=0;
        int maxr=n-1;
        int maxc=n-1;
        int[][] arr=new int[n][n];
        while(count<=n*n){
            for(int i=minc;i<=maxc && count<=n*n;i++){
                arr[minr][i]=count++;
            }
            minr++;
            for(int i=minr;i<=maxr && count<=n*n;i++){
                arr[i][maxc]=count++;
            }
            maxc--;
            for(int i=maxc;i>=minc && count<=n*n;i--){
                arr[maxr][i]=count++;
            }
            maxr--;
            for(int i=maxr;i>=minr && count<=n*n;i--){
                arr[i][minc]=count++;
            }
            minc++;
        }
        return arr;
    }
}
