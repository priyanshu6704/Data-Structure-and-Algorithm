/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public TreeNode constructTree(int[] arr,int l,int h){
        if(l>h) return null;
        
            int mid=(l+h)/2;
            TreeNode root=new TreeNode(arr[mid]);
          
            root.left=constructTree(arr,l,mid-1);
            root.right=constructTree(arr,mid+1,h);
        
        return root;

    }
    public TreeNode sortedArrayToBST(int[] nums) {
        
       return constructTree(nums,0,nums.length-1);
    }
}
