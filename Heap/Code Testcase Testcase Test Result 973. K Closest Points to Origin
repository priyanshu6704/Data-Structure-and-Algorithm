class Solution {
    public int[][] kClosest(int[][] points, int k) {
        PriorityQueue<int[]> pq=new PriorityQueue<>((e1,e2)->e2[0]-e1[0]);
        for(int i=0;i<points.length;i++){
            int x=points[i][0];
            int y=points[i][1];
            int dist=(x*x)+(y*y);
            pq.add(new int[]{
                dist,i
            });
            if(pq.size()>k) pq.poll();
        }
        int[][] res=new int[k][2];
        int i=0;
        while(i<k){
            int[] point=pq.poll();
            int index=point[1];
            res[i][0]=points[index][0];
            res[i][1]=points[index][1];
            i++;
        }
        return res;

    }
}
